{% block html_head_container %}

{% include 'pieces/html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

<body class="{{body_class}}" data-template="pages/base.twig">
	<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
	<header class="header" >
		{% block header %}
			{% include 'sections/standard-header.twig' %}
		{% endblock %}
	</header>

	<section id="content" role="main" class="content-wrapper default-text-styling">
		<div class="wrapper {{sidebar_class}}">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="layout-sidebar">
				{{sidebar}}
			</aside>
		{% endif %}
	</section>

	{% block footer %}
		{% include 'sections/footer.twig' %}
		{{ function('wp_footer') }}
	{% endblock %}
</body>
</html>
